{
  "compilerOptions": {
    "baseUrl": "components",
    "outDir": "lib",
    "module": "esnext",
    "target": "es5",
    "declaration": true,
    "declarationDir": "lib",
    "lib": [
      "dom",
      "es2015.core",
      "es2015.promise",
      "es5",
      "esnext.array",
      "es2017.object",
      "es6",
      "es2015.iterable",
      "es2015.generator",
      "es2015.symbol",
      "es7"
    ],
    "sourceMap": true,
    "jsx": "react",
    "isolatedModules": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "components"
  ]
}
